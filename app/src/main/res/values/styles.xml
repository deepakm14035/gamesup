<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#336699</item>
        <item name="colorPrimaryDark">#2d5986</item>
        <item name="colorAccent">#a34242</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#444444</item>
        <item name="android:colorForeground">#5555FF</item>
    </style>

    <style name="AppTheme.Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#2d5986</item>
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="AppTheme.Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#EEEEEE</item>
        <item name="android:background">#2d5986</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
